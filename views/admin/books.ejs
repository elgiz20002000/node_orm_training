<!DOCTYPE html>
<html>
<title><%= title %></title>

<%- include('../parts/admin/head'); %>

</head>
<body>

<div class='layout-wrapper layout-navbar-full layout-horizontal layout-without-menu'>
    <div class="layout-container">
        <%- include('../parts/admin/nav') %>

        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="table-responsive text-nowrap">
                <% if(books.length) { %>
                    <div class="card">
                        <h5 class="card-header">Table Basic</h5>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Name</th>
                                <th>Writer Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                            <% books.forEach(item =>{ %>
                                <tr>
                                    <td><img src="<%= item.photoLink %>" alt="book"></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.writerName %></td>
                                    <td><%= item.Category.name %></td>
                                    <td><%= item.price %><strong>$</strong></td>
                                    <th><%= new Date(item.createdAt).toLocaleDateString('en-GB', {
                                            day: '2-digit',
                                            month: '2-digit',
                                            year: 'numeric'
                                        }) %></th>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                                    data-bs-toggle="dropdown"><i
                                                        class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="/admin/edit-item/<%= item.id %>">
                                                    <i
                                                            class="bx bx-edit-alt me-2"></i> Edit
                                                </a>
                                                </form>
                                                <form method="post" action="/admin/delete-item/<%= item.id %>">
                                                    <button type="submit" class="dropdown-item"><i
                                                                class="bx bx-trash me-2"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>

                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <h1>Empty</h1>
                <% } %>

            </div>
        </div>

    </div>


</div>

<%- include('../parts/admin/scripts') %>


</body>
</html>


