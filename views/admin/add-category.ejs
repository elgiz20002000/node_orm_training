<!DOCTYPE html>
<html>
<title><%= title %></title>

<%- include('../parts/admin/head'); %>

</head>
<body>

<div class='layout-wrapper layout-navbar-full layout-horizontal layout-without-menu'>
    <div class="layout-container">
        <%- include('../parts/admin/nav') %>

        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><%- edit ? 'Edit Category' : 'Add Category' %> </h5>
                    </div>
                    <div class="card-body">
                        <form method="post" action="<%- edit ? `/admin/edit-category/${category.id }` : '/admin/add-category' %>" >
                            <div class="mb-3">
                                <label class="form-label" for="basic-default-fullname">Name</label>
                                <input value="<%- edit ? category.name : "" %>"  name="name" type="text" class="form-control" id="basic-default-fullname"
                                       placeholder="Name">
                            </div>
                            <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<%- include('../parts/admin/scripts') %>


</body>
</html>


