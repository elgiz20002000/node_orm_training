<!--FEATURED PRODUCTS-->
<section class="container">
    <div class="row">
        <div class="col-lg-12 text-center shop-title-store">
            <h1 class="section-title">FEATURED <span>PRODUCTS</span></h1>
            <p class="sub-title">Excepteur sint occaecat cupidatat non proident sunt<br>in culpa officia deserunt</p>
        </div>
        <div class="col-lg-12 content-store">
            <div class="">
                <% books.forEach(book => {%>
                    <div class="col-md-2 my-shop-animation">
                        <div class="box-prod group-book">
                            <div class="box-img-book">
                                <div class="book-cover-shadow"></div>
                                <img style="width: 159px; height: 224px; object-fit: cover" src="<%= book.photoLink%>">
                                <div class="box-btn-shop">
                                    <form method="post" action="/cart/<%= book.id %>">
                                        <div class="bt-img">
                                            <button type="submit" class="btn btn-add-cart"><i
                                                        class="fa fa-shopping-bag"></i></button>
                                        </div>
                                    </form>
                                    <div class="bt-img"><a class="btn btn-det-cart" href="product_detail/<%= book.id%>"><i
                                                    class="fa fa-list"></i></a></div>
                                    <div class="bt-img">
                                        <button type="button" class="btn btn-det-cart"><i class="fa fa-heart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <h2 class="title-book"><%= book.name %></h2>

                            <p class="author-txt"><%= book.writerName%></p>

                            <p class="category-txt"><%= book.Category.name %></p>

                            <p class="book-price"> $<%= book.price%></p>
                        </div>

                    </div>
                <% })%>
            </div>
        </div>
    </div>
</section>

<!--AUTHOR BOOK-->

